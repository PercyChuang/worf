<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>orj.worf</groupId>
		<artifactId>worf-web-parent</artifactId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>
	<artifactId>worf-quartz-web</artifactId>
	<packaging>war</packaging>
	<name>worf-quartz-web</name>
	<dependencies>
		<dependency>
			<groupId>orj.worf</groupId>
			<artifactId>worf-loading</artifactId>
			<version>${worf.version}</version>
		</dependency>
		<dependency>
			<groupId>orj.worf</groupId>
			<artifactId>worf-remoting-dubbo</artifactId>
			<version>${worf.version}</version>
		</dependency>    
		<dependency>
			<groupId>orj.worf</groupId>
			<artifactId>worf-web-base</artifactId>
			<version>${worf.version}</version>
		</dependency>    
		<dependency>
			<groupId>orj.worf</groupId>
			<artifactId>worf-quartz-interface</artifactId>
			<version>${worf.version}</version>
		</dependency>
	</dependencies>
	<properties>
		<filters.base.path.test>src/test/filters</filters.base.path.test>
		<filters.base.path.main>src/main/filters</filters.base.path.main>
		<overlay.skip>false</overlay.skip>
	</properties>
	<build>
		<finalName>worf-quartz-web</finalName>
		<sourceDirectory>src/main/java</sourceDirectory>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<scriptSourceDirectory>src/main/scripts</scriptSourceDirectory>
		<testSourceDirectory>src/test/java</testSourceDirectory>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</testResource>
		</testResources>
		<outputDirectory>target/classes</outputDirectory>
		<testOutputDirectory>target/test-classes</testOutputDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<warSourceDirectory>${basedir}/src/main/webapp</warSourceDirectory>
				</configuration>
			</plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>ci</id>
			<properties>
				<overlay.skip>true</overlay.skip>
				<maven.webapp.directory>${project.build.directory}/${project.build.finalName}</maven.webapp.directory>
			</properties>
		</profile>
		<profile>
			<id>test</id>
			<properties>
				<overlay.skip>true</overlay.skip>
				<maven.webapp.directory>${project.build.directory}/${project.build.finalName}</maven.webapp.directory>
			</properties>
		</profile>
		<profile>
			<id>stg</id>
			<properties>
				<maven.webapp.directory>${project.build.directory}/${project.build.finalName}</maven.webapp.directory>
			</properties>
		</profile>
		<profile>
			<id>prd</id>
			<properties>
				<maven.webapp.directory>${project.build.directory}/${project.build.finalName}</maven.webapp.directory>
			</properties>
		</profile>
	</profiles>
</project>
